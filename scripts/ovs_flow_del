#!/bin/bash
if [[ $1 == "-h" ]]
then
echo "Delete all bridge flows"
echo ""
echo "-b | --bridge: bridge name"
exit 0
fi

source vars.sh

while [[ $# -gt 1 ]]
do
key="$1"
case $key in
-b|--bridge)
    BRIDGE="$2"
    shift 
    ;;

*)
    ;;
esac
shift 
done

sudo $OVS_DIR/utilities/ovs-ofctl del-flows $BRIDGE
sleep $SLEEP_SECS
